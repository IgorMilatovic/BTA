@model IEnumerable<BTA.Models.POI>



@foreach (var item in Model) {
    <div class="row p-1">
        <div class="col-4 px-1">
            <div class="recent-poi-wrappers">
                <img class="img-fluid" src="@Html.DisplayFor(modelItem => item.PoiImg)" alt="@Html.DisplayFor(modelItem => item.Name)" style="width: 100%; height: 100%;" />
            </div>
        </div>
        <div class="col-8 px-1">
            <div class="recent-poi-wrappers bg-light border border-dark p-3">
                <h4>@item.Name</h4>

                <p class="mb-2">@Html.DisplayFor(modelItem => item.POIDescription):</p>
                <address>@Html.DisplayFor(modelItem => item.Address), @Html.DisplayFor(modelItem => item.City.CityName)<br /></address>
                <span class="mb-2"><a href="@Html.DisplayFor(modelItem => item.Website)" target="_blank">Website</a></span> <span>|</span>
                <span>@Html.ActionLink("Details & feedback", "Details", new { id = item.PoiId })</span>
            </div>
        </div>
    </div>
}


